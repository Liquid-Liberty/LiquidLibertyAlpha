{
  "name": "liquid-liberty-api",
  "version": "1.0.0",
  "description": "Serverless API functions for Liquid Liberty Marketplace - IPFS uploads, signature generation, and content moderation",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'No build step required for serverless functions'",
    "deploy": "netlify deploy --prod",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:local": "netlify functions:serve",
    "test:signature": "node netlify/functions/test-signature-verification.js",
    "test:debug": "node netlify/functions/debug-signature-mismatch.js"
  },
  "keywords": [
    "serverless",
    "netlify",
    "ipfs",
    "ethereum",
    "eip-712",
    "api"
  ],
  "author": "Liquid Liberty",
  "license": "MIT",
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "axios": "^1.11.0",
    "badwords-list": "^2.0.1-4",
    "content-checker": "^1.1.3",
    "ethers": "^6.14.4",
    "form-data": "^4.0.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^16.3.1",
    "netlify-cli": "latest",
    "supertest": "^7.0.0",
    "vitest": "^2.1.8"
  }
}
